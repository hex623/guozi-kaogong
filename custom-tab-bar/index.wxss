/* custom-tab-bar/index.wxss */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 999;
}

.tab-bar-border {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: #f0f0f0;
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
  transition: color 0.2s;
}

.tab-bar-item.active {
  color: #333;
}

.tab-icon {
  font-size: 44rpx;
  line-height: 1;
  margin-bottom: 8rpx;
}

.tab-text {
  font-size: 22rpx;
  line-height: 1;
}
