<!-- custom-tab-bar/index.wxml -->
<cover-view class="tab-bar">
  <cover-view class="tab-bar-border"></cover-view>
  <cover-view wx:for="{{list}}" wx:key="index" 
            class="tab-bar-item {{selected === index ? 'active' : ''}}"
            data-path="{{item.pagePath}}"
            data-index="{{index}}"
            bindtap="switchTab">
    <cover-view class="tab-icon">{{item.icon}}</cover-view>
    <cover-view class="tab-text">{{item.text}}</cover-view>
  </cover-view>
</cover-view>
