/* pages/add/add.wxss */
.photo-card {
  margin-bottom: 20rpx;
}

.photo-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.photo-item {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

.photo-item image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.add-btn {
  background: #f5f5f5;
  border: 2rpx dashed #ddd;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.add-btn.large {
  width: 100%;
  height: 300rpx;
}

.add-icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.add-text {
  font-size: 26rpx;
  color: #999;
}

.photo-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
  display: block;
}

.answer-tabs {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.tab {
  padding: 12rpx 32rpx;
  border-radius: 30rpx;
  background: #f5f5f5;
  font-size: 28rpx;
  color: #666;
}

.tab.active {
  background: #333;
  color: #fff;
}

.answer-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.answer-photo-wrapper {
  text-align: center;
}

.answer-photo {
  max-width: 100%;
  max-height: 400rpx;
  border-radius: 12rpx;
}

.delete-answer-btn {
  margin-top: 20rpx;
  color: #ff4d4f;
  font-size: 28rpx;
}

.source-input {
  width: 100%;
  padding: 24rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.tag-input-wrapper {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.tag-input {
  flex: 1;
  padding: 24rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.add-tag-btn {
  padding: 24rpx 40rpx;
  background: #333;
  color: #fff;
  border-radius: 12rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.selected-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 24rpx;
  background: #333;
  color: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
}

.tag-delete {
  font-size: 24rpx;
  opacity: 0.8;
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 12rpx;
}

.history-label {
  font-size: 24rpx;
  color: #999;
}

.history-tag {
  padding: 8rpx 20rpx;
  background: #f0f0f0;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.history-tag.selected {
  background: #333;
  color: #fff;
}

.submit-section {
  padding: 40rpx 30rpx 60rpx;
}

.btn-primary.disabled {
  background: #ccc;
}
