/* pages/question-detail/question-detail.wxss */
.detail-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.detail-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  flex: 1;
}

.tag {
  padding: 8rpx 20rpx;
  background: #f0f0f0;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.tag.empty {
  background: #f9f9f9;
  color: #999;
}

.detail-actions {
  padding: 20rpx;
}

.detail-actions text {
  font-size: 40rpx;
}

.question-images {
  margin-bottom: 30rpx;
}

.question-images image {
  width: 100%;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.wrong-answer-section,
.correct-answer-section {
  margin-bottom: 30rpx;
  padding: 24rpx;
  border-radius: 12rpx;
}

.wrong-answer-section {
  background: #fff2f0;
}

.correct-answer-section {
  background: #f6ffed;
}

.section-label {
  font-size: 26rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  display: block;
}

.section-label.wrong {
  color: #ff4d4f;
}

.section-label.correct {
  color: #52c41a;
}

.answer-content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
}

.meta-section {
  border-top: 1rpx solid #eee;
  padding-top: 24rpx;
  margin-bottom: 30rpx;
}

.meta-item {
  display: flex;
  margin-bottom: 16rpx;
}

.meta-label {
  font-size: 26rpx;
  color: #999;
  width: 160rpx;
}

.meta-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.review-history-section {
  border-top: 1rpx solid #eee;
  padding-top: 24rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.review-timeline {
  padding-left: 20rpx;
}

.timeline-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
  position: relative;
}

.timeline-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-top: 8rpx;
}

.timeline-dot.mastered {
  background: #52c41a;
}

.timeline-dot.forgot {
  background: #ff4d4f;
}

.timeline-content {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.timeline-date {
  font-size: 26rpx;
  color: #666;
}

.timeline-result {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
}

.timeline-result.mastered {
  background: #f6ffed;
  color: #52c41a;
}

.timeline-result.forgot {
  background: #fff2f0;
  color: #ff4d4f;
}

.empty-history {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
}

.status-section {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #eee;
}

.status-badge {
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.status-badge.learning {
  background: #e6f7ff;
  color: #1890ff;
}

.status-badge.mastered {
  background: #f6ffed;
  color: #52c41a;
}

.status-text {
  font-size: 28rpx;
  color: #666;
}

.loading-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #999;
}

/* 编辑模式样式 */
.edit-section {
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.edit-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.edit-item {
  margin-bottom: 30rpx;
}

.edit-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

.edit-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.edit-hint {
  font-size: 26rpx;
  color: #999;
  padding: 20rpx;
  background: #f0f0f0;
  border-radius: 12rpx;
}

.edit-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.edit-tag {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 24rpx;
  background: #333;
  color: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
}

.edit-tag-delete {
  font-size: 24rpx;
  opacity: 0.8;
}

.edit-tag-input {
  width: 100%;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.edit-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.edit-actions button {
  flex: 1;
  padding: 24rpx 0;
  border-radius: 40rpx;
  font-size: 30rpx;
  border: none;
}

.edit-actions button::after {
  border: none;
}

.btn-secondary {
  background: #f0f0f0;
  color: #666;
}

.btn-primary {
  background: #333;
  color: #fff;
}
