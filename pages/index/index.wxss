/* pages/index/index.wxss */
.countdown-card {
  background: linear-gradient(135deg, #333 0%, #555 100%);
  color: #fff;
  text-align: center;
  padding: 40rpx;
}

.countdown-card.empty {
  background: #f0f0f0;
}

.countdown-content {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: 16rpx;
}

.countdown-label {
  font-size: 28rpx;
  margin-right: 16rpx;
}

.countdown-number {
  font-size: 80rpx;
  font-weight: 700;
}

.countdown-unit {
  font-size: 28rpx;
  margin-left: 8rpx;
}

.countdown-date {
  font-size: 24rpx;
  opacity: 0.8;
}

.countdown-hint {
  color: #999;
  font-size: 28rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.stat-item {
  text-align: center;
}

.review-btn-wrapper {
  margin-top: 20rpx;
}

.checkin-days {
  display: flex;
  align-items: baseline;
  margin-top: 16rpx;
}

.checkin-number {
  font-size: 64rpx;
  font-weight: 700;
  color: #333;
}

.checkin-unit {
  font-size: 28rpx;
  color: #666;
  margin-left: 8rpx;
}

.calendar-preview {
  display: flex;
  gap: 12rpx;
}

.calendar-day {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #eee;
}

.calendar-day.checked {
  background: #333;
}

.trend-chart {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 200rpx;
  padding: 20rpx 0;
}

.trend-bar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.trend-bar {
  width: 20rpx;
  background: #333;
  border-radius: 10rpx 10rpx 0 0;
  min-height: 4rpx;
  transition: height 0.3s;
}

.trend-date {
  font-size: 20rpx;
  color: #999;
  margin-top: 12rpx;
}

.tag-item {
  margin-bottom: 24rpx;
}

.tag-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.tag-name {
  font-size: 28rpx;
  color: #333;
}

.tag-count {
  font-size: 24rpx;
  color: #999;
}

.tag-bar-wrapper {
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.tag-bar {
  height: 100%;
  background: #333;
  border-radius: 4rpx;
  transition: width 0.3s;
}

.quick-add-card {
  background: #333;
  margin-bottom: 40rpx;
}

.quick-add-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #fff;
}

.quick-add-icon {
  font-size: 40rpx;
}

.quick-add-text {
  font-size: 32rpx;
  font-weight: 500;
  flex: 1;
  margin-left: 20rpx;
}

.quick-add-arrow {
  font-size: 32rpx;
}
