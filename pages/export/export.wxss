.container {
  padding: 20rpx;
  padding-bottom: 160rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 导出选项 */
.export-options {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.option-group {
  margin-bottom: 30rpx;
}

.option-group:last-child {
  margin-bottom: 0;
}

.option-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.option-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.option-btn {
  padding: 16rpx 32rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.option-btn.active {
  background: #e6f7ed;
  color: #07c160;
  border-color: #07c160;
}

/* 自选列表 */
.select-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  max-height: 600rpx;
}

.select-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.select-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.select-all {
  font-size: 26rpx;
  color: #07c160;
}

.select-list {
  max-height: 500rpx;
}

.select-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.select-item:last-child {
  border-bottom: none;
}

.select-check {
  margin-right: 20rpx;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkbox.checked {
  background: #07c160;
  border-color: #07c160;
}

.checkbox.checked::after {
  content: '✓';
  color: #fff;
  font-size: 24rpx;
}

.select-thumb {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.select-info {
  flex: 1;
}

.select-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.tag-mini {
  font-size: 22rpx;
  color: #07c160;
  background: #e6f7ed;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.select-date {
  font-size: 24rpx;
  color: #999;
}

/* 统计 */
.export-stats {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.stats-text {
  font-size: 28rpx;
  color: #666;
}

/* 导出按钮 */
.export-action {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx 40rpx;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  background: #ffffff;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
}

.export-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: #07c160;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  border: none;
}

.export-btn.disabled {
  background: #ccc;
}

.export-btn::after {
  border: none;
}

/* 预览 */
.preview-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-top: 20rpx;
}

.preview-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.preview-image {
  width: 100%;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}
