/* pages/review/review.wxss */
.header-card {
  background: #333;
  padding: 40rpx 30rpx;
  margin: -20rpx -30rpx 20rpx;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.review-count {
  color: #fff;
}

.count-number {
  font-size: 72rpx;
  font-weight: 700;
  margin-right: 16rpx;
}

.count-label {
  font-size: 28rpx;
  opacity: 0.8;
}

.review-progress {
  text-align: right;
}

.progress-text {
  color: #fff;
  font-size: 24rpx;
  opacity: 0.8;
}

.progress-bar {
  width: 200rpx;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 4rpx;
  margin-top: 12rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #fff;
  border-radius: 4rpx;
  transition: width 0.3s;
}

.empty-state {
  text-align: center;
  padding: 100rpx 60rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  display: block;
  margin-bottom: 40rpx;
}

.review-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  min-height: 70vh;
}

.question-header {
  margin-bottom: 30rpx;
}

.question-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 16rpx;
}

.review-stage {
  background: #f0f0f0;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.question-source {
  font-size: 24rpx;
  color: #999;
}

.question-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.question-images {
  margin-bottom: 30rpx;
}

.question-images image {
  width: 100%;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.wrong-answer-hint {
  background: #fff2f0;
  border-left: 4rpx solid #ff4d4f;
  padding: 20rpx 24rpx;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
}

.hint-label {
  font-size: 24rpx;
  color: #ff4d4f;
  display: block;
  margin-bottom: 8rpx;
}

.hint-content {
  font-size: 28rpx;
  color: #333;
}

.action-area {
  margin-top: 60rpx;
}

.btn-large {
  padding: 30rpx 80rpx;
  font-size: 36rpx;
}

.answer-section {
  margin-top: 40rpx;
  padding-top: 40rpx;
  border-top: 1rpx solid #eee;
}

.answer-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #52c41a;
  margin-bottom: 20rpx;
}

.answer-text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
  background: #f6ffed;
  padding: 24rpx;
  border-radius: 12rpx;
}

.answer-image {
  width: 100%;
  border-radius: 12rpx;
}

.mastery-section {
  margin-top: 50rpx;
}

.mastery-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 24rpx;
  text-align: center;
}

.mastery-buttons {
  display: flex;
  gap: 24rpx;
}

.btn-mastery {
  flex: 1;
  padding: 30rpx 20rpx;
  border-radius: 16rpx;
  border: none;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btn-mastery::after {
  border: none;
}

.btn-forgot {
  background: #fff2f0;
  color: #ff4d4f;
}

.btn-mastered {
  background: #f6ffed;
  color: #52c41a;
}

.btn-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.btn-desc {
  font-size: 22rpx;
  opacity: 0.7;
  margin-top: 8rpx;
}

.result-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  text-align: center;
}

.result-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.result-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.result-desc {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 30rpx;
}

.next-review-info {
  background: #f5f5f5;
  padding: 20rpx 40rpx;
  border-radius: 30rpx;
  margin-bottom: 40rpx;
}

.next-review-info text {
  font-size: 26rpx;
  color: #666;
}
